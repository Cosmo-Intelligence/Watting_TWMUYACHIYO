<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="off">

	<!-- Propertiesは、nameの値を変数として使える -->
	<Properties>
		<Property name="format">%d [%t] %5p - %m %n</Property>
		<!-- ログのフォーマット
		%dは日時。{}に日時の形式を指定
		%tはスレッド名
		%-6pはログレベル名称を左詰めで6文字分出力する。「debug」であれば後ろに空白１文字が追加される。
		但し、%-3pとしても名称は削られず「debug」として出力される。%6と-をとると右づめになる。
		%c{x}は,例えばロガー名がorg.apache.commons.Fooのとき%c{2}の場合、commons.Fooが出力される
		%mはログメッセージ
		%nは改行
		-->
		<!--<Property name="logfile">C:/Program Files/Apache Software Foundation/Tomcat 10.1/logs/ShowReceipt.log</Property>
		<Property name="logfile-archive">C:/Program Files/Apache Software Foundation/Tomcat 10.1/logs/ShowReceipt_%d{yyyy-MM-dd}-%i.log</Property>
		-->
		<Property name="logfile">C:\pleiades\2023-12\tomcat\10.1\apache-tomcat-10.1.15\logs/ShowReceipt.log</Property>
		<Property name="logfile-archive">C:\pleiades\2023-12\tomcat\10.1\apache-tomcat-10.1.15\logs/ShowReceipt_%d{yyyy-MM-dd}-%i.log</Property>
	</Properties>

	<Appenders>
		<!-- ファイルに出力する設定 -->
		<RollingFile name="logSetting" append="true" fileName="${logfile}" filePattern="${logfile-archive}">
			<PatternLayout>
				<pattern>${format}</pattern>
			</PatternLayout>

			<!-- 日にちが切り替わるごとにローテーションを行う -->
			<TimeBasedTriggeringPolicy></TimeBasedTriggeringPolicy>
		</RollingFile>
	</Appenders>

	<Loggers>
		<!-- ログの出力レベル -->
		<Root level="debug">
			<AppenderRef ref="logSetting" />
		</Root>
	</Loggers>
</Configuration>
